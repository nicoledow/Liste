<% if @user_restricted %>
<h1> <%= @user.name%>'s Assignments: </h1>
<% else %>
<h1> Your Team's Assignments: </h1>
<% end %>

<ul>
  <% @assignments.each do |assignment| %>
    <li> <%= link_to assignment.task.description, task_path(assignment.task) %> -  <%= assignment.user.name %> (<%= assignment.task.list.title%>)</li>
  <% end %>
</ul>